<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo per il nome dell'alimento -->
    <EditText
        android:id="@+id/editTextFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome dell'alimento" />

    <!-- Campo per la data di scadenza -->
    <EditText
        android:id="@+id/editTextExpiryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data di scadenza (es: 2024-12-31)"
        android:focusable="false" />

    <!-- Pulsante per selezionare la data -->
    <Button
        android:id="@+id/buttonPickDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleziona data di scadenza" />

    <!-- Campo per la quantità -->
    <EditText
        android:id="@+id/editTextQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantità"
        android:inputType="number" />

    <!-- Spinner per selezionare la categoria -->
    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Pulsante per aggiungere l'alimento -->
    <Button
        android:id="@+id/buttonAddFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aggiungi Alimento" />
</LinearLayout>
