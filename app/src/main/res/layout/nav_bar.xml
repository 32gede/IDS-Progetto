<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Altri contenuti della pagina -->

    <!-- NavBar ancorata al fondo -->
    <LinearLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#E0E0E0"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- FrameLayout per il pulsante Home -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <!-- Sfondo circolare per Home -->
            <ImageView
                android:id="@+id/homeBackgroundCircle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/selected_nav_item_background"
                android:visibility="gone" /> <!-- Inizialmente nascosto -->

            <!-- Icona Home -->
            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Home"
                android:src="@drawable/icons8_casa_24" />
        </FrameLayout>

        <!-- FrameLayout per il pulsante Ricerca -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <!-- Sfondo circolare per Ricerca -->
            <ImageView
                android:id="@+id/searchBackgroundCircle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/selected_nav_item_background"
                android:visibility="gone" /> <!-- Inizialmente nascosto -->

            <!-- Icona Ricerca -->
            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Ricerca"
                android:src="@drawable/baseline_search_24" />
        </FrameLayout>

        <!-- FrameLayout per il pulsante Lista -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <!-- Sfondo circolare per Lista -->
            <ImageView
                android:id="@+id/fridgeBackgroundCircle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/selected_nav_item_background"
                android:visibility="gone" /> <!-- Inizialmente nascosto -->

            <!-- Icona Lista -->
            <ImageButton
                android:id="@+id/fridgeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Lista"
                android:src="@drawable/baseline_storefront_24" />
        </FrameLayout>

        <!-- FrameLayout per il pulsante Profilo -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <!-- Sfondo circolare per Profilo -->
            <ImageView
                android:id="@+id/recipeBackgroundCircle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/selected_nav_item_background"
                android:visibility="gone" /> <!-- Inizialmente nascosto -->

            <!-- Icona Profilo -->
            <ImageButton
                android:id="@+id/recipeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Profilo"
                android:src="@drawable/baseline_library_books_24" />
        </FrameLayout>

    </LinearLayout>

    <!-- Vincola gli altri elementi al top della NavBar -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_of_navbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
