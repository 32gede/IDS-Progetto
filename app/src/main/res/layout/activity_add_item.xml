<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.progetto.ui.item.AddItemActivity">

    <!-- Nome del Prodotto -->
    <EditText
        android:id="@+id/etProductNameField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nome del Prodotto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Quantità -->
    <EditText
        android:id="@+id/etQuantityField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Quantità"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/etProductNameField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Data di Scadenza (Formato: gg/MM/yyyy) -->
    <EditText
        android:id="@+id/etExpiryDateField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Data di Scadenza (gg/MM/yyyy)"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/etQuantityField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>



    <!-- Pulsante Salva -->
    <Button
        android:id="@+id/btnSaveProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salva Prodotto"
        app:layout_constraintTop_toBottomOf="@id/etExpiryDateField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
