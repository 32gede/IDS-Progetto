<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_recipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recipe.RecipeActivity">

    <!-- Main content layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Bar anchored at the top -->
        <LinearLayout
            android:id="@+id/topBarRecipe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Title in Top Bar -->
            <TextView
                android:id="@+id/titleRecipe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:letterSpacing="0.15"
                android:padding="8dp"
                android:text="@string/recipe"
                android:textColor="#4B0082"
                android:textSize="32sp" />

            <!-- Notification Icon -->
            <ImageButton
                android:id="@+id/notificationButtonRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Notifiche"
                android:padding="8dp"
                android:src="@drawable/baseline_notifications_24" />

            <!-- Profile Icon -->
            <ImageButton
                android:id="@+id/profileButtonRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Profilo"
                android:padding="8dp"
                android:src="@drawable/baseline_person_24" />
        </LinearLayout>

        <!-- RecyclerView with SwipeRefreshLayout -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayoutRecipe"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topBarRecipe"
            app:layout_constraintBottom_toTopOf="@id/navBarRecipe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewRecipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="8dp" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Background circle behind the add button -->
        <ImageView
            android:id="@+id/addButtonBackgroundCircleRecipe"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:src="@drawable/selected_nav_item_background"
            app:layout_constraintTop_toTopOf="@id/swipeRefreshLayoutRecipe"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Add button on top right of the circle -->
        <ImageButton
            android:id="@+id/addButtonRecipe"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="Add"
            android:src="@drawable/baseline_add_24"
            app:layout_constraintTop_toTopOf="@id/swipeRefreshLayoutRecipe"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bottom Navbar anchored at the bottom -->
        <LinearLayout
            android:id="@+id/navBarRecipe"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#E0E0E0"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Home Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/homeBackgroundCircleRecipe"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/selected_nav_item_background"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/homeButtonRecipe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Home"
                    android:src="@drawable/icons8_casa_24" />
            </FrameLayout>

            <!-- Search Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/searchBackgroundCircleRecipe"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/selected_nav_item_background"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/searchButtonRecipe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Ricerca"
                    android:src="@drawable/baseline_search_24" />
            </FrameLayout>

            <!-- List Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/fridgeBackgroundCircleRecipe"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/selected_nav_item_background"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/fridgeButtonRecipe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Lista"
                    android:src="@drawable/fridge__1_" />
            </FrameLayout>

            <!-- Profile Button -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/recipeBackgroundCircleRecipe"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/selected_nav_item_background"
                    android:visibility="gone" />
                <ImageButton
                    android:id="@+id/recipeButtonProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Profilo"
                    android:src="@drawable/baseline_library_books_24" />
            </FrameLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_recipe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
